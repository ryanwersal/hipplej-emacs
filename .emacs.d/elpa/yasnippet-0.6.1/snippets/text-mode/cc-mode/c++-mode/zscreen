//==============================================================================
class ${1:ScreenName} : public $1_scr
{
	Q_OBJECT

public:
    $1(QWidget* parent = 0, const char* name = "$1", WFlags f = 0);
    virtual ~$1();

	virtual ZScreen* emptyScreen() { return new $1(); }
	virtual QString screenKey(const QString& id = "") { return $1_scr::screenKey(id); }
	virtual void fillMenuPane(ZTaskPane* menuPane);

protected:
	virtual void open(const QString& ${2:recordid});
	virtual void save();
	virtual void requery();
	virtual void print();

protected slots:
	void handleLink(const QString& link);

private:
	ZSqlModel _model;
};

#endif

#include "${1:$(downcase text)}.h"

#include "core.h"
#include "initializer.h"

//==============================================================================
$1::$1(QWidget* parent, const char* name, WFlags f)
	: $1_scr(parent, name, f),
	  _model("${4:table}")
{
	// _model.addField("foo", lneFoo);
	// _model.setRequired(lneFoo, true, "Foo");
	connectModel(&_model);
}

//==============================================================================
$1::~$1()
{}

//==============================================================================
void $1::fillMenuPane(ZTaskPane* menuPane)
{
	QMap<QString, QVariant> menu;
	QStringList links;
	menu["Menu"] = links;
	initializer::fillTaskPane(menuPane, menu);
}

//==============================================================================
void $1::handleLink(const QString& link)
{
	QStringList args = QStringList::split("\t", link);
	args << "" << "";

	if (args[0] == "foo") { /* callFoo(args[1]); */ }
	else
	{
		Core::intercom()->handleLink(link);
	}
}

//==============================================================================
void $1::open(const QString& $2)
{
	_model.setRecord(zsql::checkInt($2));
}

//==============================================================================
void $1::save()
{
	_model.save();
}

//==============================================================================
void $1::requery()
{
	try
	{
		// Do Stuff.
	}
	catch (zt::exception& e)
	{
		zwarn << __FUNCTION__ << "() -- " << e.what() << endl;
	}
}

//==============================================================================
void $1::print()
{
	ZReportParams p;
	p["$2"] = zsql::checkInt(_model.getRecord());
	Core::intercom()->callOpenReport("module", "reportname", p);
}
